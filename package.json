{
  "name": "slack-arguers",
  "version": "0.1.0",
  "description": "Multi-persona AI debate system for Slack using AWS Bedrock AgentCore",
  "private": true,
  "workspaces": [
    "infrastructure",
    "src/agent",
    "src/lambda"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "cdk": "npm run cdk --workspace infrastructure",
    "deploy:dev": "npm run cdk deploy -- --context environment=dev",
    "deploy:prod": "npm run cdk deploy -- --context environment=prod"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
